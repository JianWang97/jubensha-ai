# AI剧本杀游戏服务器配置

# OpenAI API配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-3.5-turbo
DEFAULT_MODEL=gpt-3.5-turbo

# 文生图配置 (可选: comfyui, minimax)
IMAGE_GENERATION_PROVIDER=minimax
# 当IMAGE_GENERATION_PROVIDER=minimax时需要配置
MINIMAX_API_KEY=your_minimax_api_key_here
# 当IMAGE_GENERATION_PROVIDER=comfyui时需要配置
COMFYUI_URL=your_comfyui_server_url
COMFYUI_WORKFLOW_FILE=workflow_config.json

# TTS配置
TTS_PROVIDER=minimax 
TTS_DEFAULT_VOICE=female-shaonv

# CosyVoice配置 (当TTS_PROVIDER=cosyvoice2-ex时需要配置)
COSYVOICE_BASE_URL=http://localhost:8189

# Minimax配置 (当TTS_PROVIDER=minimax时需要配置)
TTS_API_KEY=your_tts_api_key_here
TTS_MODEL=speech-01-turbo
MINIMAX_GROUP_ID=your_minimax_group_id_here

# 后端服务器配置
HOST=localhost
PORT=8010
BACKEND_PORT=8010

# 前端服务器配置
WEB_HOST=localhost
WEB_PORT=3000

# 前端API配置
NEXT_PUBLIC_API_URL=http://localhost:8010

# PostgreSQL数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=jubensha
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_POOL_SIZE=10

# 文件存储配置 (可选: minio, dir)
FILE_STORAGE=dir

# MinIO存储配置 (当FILE_STORAGE=minio时需要配置)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=jubensha-storage
MINIO_SECURE=false
MINIO_PUBLIC_URL=http://localhost:8010

# 环境配置
ENV=development

# 用户认证配置
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256